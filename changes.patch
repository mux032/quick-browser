+                "script-src * 'unsafe-inline' 'unsafe-eval'; " +
+                "style-src * 'unsafe-inline'; " +
+                "img-src * data: https:; " +
+                "font-src * data:; " +
+                "connect-src *; " +
+                "media-src *; " +
+                "object-src *; " +
+                "child-src *; " +
+                "frame-ancestors *; " +
+                "base-uri *; " +
+                "form-action *;"
+    }
+}
