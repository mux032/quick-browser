+    fun getUrlWithoutQuery(url: String): String {
+        return try {
+            val uri = URI(url)
+            val scheme = uri.scheme
+            val host = uri.host
+            val port = uri.port
+            val path = uri.path
+            
+            val portPart = if (port != -1) ":$port" else ""
+            val pathPart = path ?: ""
