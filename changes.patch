+                .replace("\\s+".toRegex(), " ")
+                .replace("\\[[0-9]+\\]".toRegex(), "") // Remove citation numbers like [1], [2], etc.
+                .replace("\\(https?://[^\\s]+\\)".toRegex(), "") // Remove URLs in parentheses
